{
  "cli": {
    "version": ">= 13.1.1",
    // see https://docs.expo.dev/build-reference/app-versions/
    // this ensures the version is incremented on every build
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "production": {
      "ios": {
        "resourceClass": "m-medium"
      },
      // see https://docs.expo.dev/build-reference/app-versions/
      // this ensures the version is incremented on every build
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
